    width: 60px; /* Set width */
    height: 60px; /* Set height */
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.4); /* Deeper shadow for 3D effect */
    transform: perspective(1000px) rotateX(0deg) rotateY(0deg); /* 3D perspective */
    position: relative;
}

.button::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    box-shadow: inset 0 0 15px rgba(0, 0, 0, 0.3); /* Inner shadow for 3D effect */
    z-index: -1;
    transform: scale(0.9); /* Slightly smaller to create a 3D effect */
}

.button:hover {
    background: linear-gradient(90deg, #ff9900, #ffcc00); /* Inverted gradient on hover */
    transform: scale(1.1); /* Slightly enlarge on hover */
    box-shadow: 0 12px 25px rgba(0, 0, 0, 0.6); /* Deeper shadow on hover */
}

.button:active {
    transform: scale(1.05); /* Slightly reduce size on click */
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5); /* Slightly less shadow on click */
}

